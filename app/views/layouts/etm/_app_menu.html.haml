            </svg>
          = t('app_nav.about_the_etm')
        %ul
          %li= learn_link t('app_nav.etm_what'), about_path
          %li= learn_link t('app_nav.etm_why'), about_path(anchor: 'why-use')
          %li= learn_link t('app_nav.etm_use_cases'), about_path(anchor: 'what-to-do')
          %li= learn_link t('app_nav.getting_started'), about_path(anchor: 'getting-started')
      .section.features
        %strong
          :plain
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
